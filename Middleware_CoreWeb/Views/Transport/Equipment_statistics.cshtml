@model NavigatorBarModel
@{
    Layout = "_Default";
}
@section css {
    <style>
        #container1 {
            width: 100%;
            height: 430px;
        }

        #container2 {
            width: 100%;
            height: 430px;
            margin-top: 20px;
        }

        #container3 {
            width: 100%;
            height: 430px;
            margin-top: 20px;
        }

        @@media (min-width: 769px) {
            #container2 {
                height: 430px;
                margin-top: 20px;
                float: left;
            }

            #container3 {
                height: 430px;
                margin-top: 20px;
                float: left;
            }
        }
    </style>
}

@section javascript {
    <script src="~/node_modules/echarts/dist/echarts.min.js"></script>
    <script type="text/javascript">

        var myChart1 = echarts.init(document.getElementById("container1"));
        var myChart2 = echarts.init(document.getElementById("container2"));

        $('#btn_repeat').on('click', function () {
            $('#menuSelectA').selectpicker('val', 0);
            $('#menuSelectB').selectpicker('val', 0);
        });

        $.ajax({
            url: '/api/ResponseStatistics/Stack/',
            data: { txt: "成品" },
            type: "get",
            contentType: 'application/json',
            success: function (res) {
                if (res != null) {
                    viewAbinding(res);
                }
            },
            error: function (e) {
                toastr.error(e.responseText);
            }
        });

        $("#menuSelectB").change(function () {
            $.ajax({
                url: '/api/ResponseStatistics/Stack/',
                data: { txt: $("#menuSelectB").val() },
                type: "Get",
                success: function (res) {
                    if (res != null) {
                        viewAbinding(res);
                    }
                },
                error: function (e) {
                    toastr.error(e.responseText);
                }
            });
        });

        function viewAbinding(data) {
            option = {
                tooltip: {
                    trigger: 'axis',
                    axisPointer: {            // 坐标轴指示器，坐标轴触发有效
                        type: 'line'        // 默认为直线，可选为：'line' | 'shadow'
                    }
                },
                legend: {
                    data: ['开始时间', '准备时间', '完成时间']
                },
                grid: {
                    left: '3%',
                    right: '4%',
                    bottom: '3%',
                    containLabel: true
                },
                xAxis: [
                    {
                        type: 'category',
                        data: data.xAxisTitle,
                        axisLabel: { rotate: -60 }
                    }
                ],
                yAxis: [
                    {
                        type: 'value'
                    }
                ],
                series: [{
                    name: '开始时间',
                    type: 'bar',
                    stack: 'rw',
                    data: data.timeA
                }, {
                    name: '准备时间',
                    type: 'bar',
                    stack: 'rw',
                    data: data.timeB
                }, {
                    name: '完成时间',
                    type: 'bar',
                    stack: 'rw',
                    data: data.timeC
                }]
            };
            myChart1.setOption(option, true);
        };

